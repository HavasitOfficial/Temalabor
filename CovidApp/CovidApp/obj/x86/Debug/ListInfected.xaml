<Page x:ConnectionId='1'
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CovidApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    x:Class="CovidApp.ListInfected"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <DropDownButton x:ConnectionId='4' x:Name="SearchBasedOn">
                <DropDownButton.Content>Based on</DropDownButton.Content>
                <DropDownButton.Flyout>
                    <Flyout>
                        <ListView x:ConnectionId='7'                                     >
                            <ListView.ItemTemplate>
                                <DataTemplate                      >
                                    <TextBlock x:ConnectionId='9'                ></TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Flyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <TextBox x:ConnectionId='5' x:Name="SearchString" RelativePanel.RightOf="SearchBasedOn" PlaceholderText="Basex on"/>
            <Button x:ConnectionId='6' x:Name="Enter" Content="Enter" RelativePanel.RightOf="SearchString"                    />

        </RelativePanel>
        
       
        <controls:DataGrid x:ConnectionId='2' x:Name="MainDataGrid" Height="600" Margin="12" AutoGenerateColumns="False"
                                                                      >
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn
                    Header="Family name"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding FamilyName,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="First name"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding FirstName,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="Email"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding Email,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="Phone"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding PhoneNumber,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="Region"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding Region,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="Sex"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding Sex,Mode=OneWay}"
                    />
                <controls:DataGridTextColumn
                    Header="Symptoms"
                    Width="SizeToCells"
                    FontSize="15"
                    Binding="{Binding SymptomsString}"
                    />
            </controls:DataGrid.Columns>

        </controls:DataGrid>
        <Button x:ConnectionId='3' Content="Back"                          Margin="0,52,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>

