<Page
    x:Class="CovidApp.AddNewCovidPatient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CovidApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center" >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Name:" Padding="0 10 0 5"/>
            <TextBox x:ConnectionId='3' x:Name="patientName"  PlaceholderText="Write here your name"/>
            <TextBlock Text="Region:" Padding="0 10 0 5"/>
            <TextBox x:ConnectionId='4' x:Name="patientRegion"  PlaceholderText="Write here your Region"/>
            <TextBlock Text="Sex:" Padding="0 10 0 5"/>
            <StackPanel x:ConnectionId='5' x:Name="sexCheck" Orientation="Horizontal">
                <CheckBox x:ConnectionId='13' x:Name="male"                        Content="Male"/>
                <CheckBox x:ConnectionId='14' x:Name="famale"                           Content="Famale"/>
            </StackPanel>

            <TextBlock Text="Slide your age:"/>
            <StackPanel Orientation="Horizontal">
                <Slider Width="265" Minimum="18" Value="{Binding Path=AgeNumber, Mode=TwoWay}" />
                <TextBox x:ConnectionId='12' Width="80" x:Name="patientAge" Text="{Binding Path=AgeNumber, Mode=TwoWay}"  PlaceholderText="Your age"/>
            </StackPanel>

            <TextBlock Text="Email address:"  Padding="0 10 0 0"/>
            <TextBox x:ConnectionId='6' x:Name="patientEmailAddress" PlaceholderText="Write here your Email address"/>

            <TextBlock Text="Phone number:"  Padding="0 10 0 0"/>
            <TextBox x:ConnectionId='7' x:Name="patientPhoneNumber" PlaceholderText="Write here your Email address"/>

            <StackPanel Orientation="Vertical" Margin="20">

                <CheckBox x:ConnectionId='8' x:Name="noSmell" Content="No smell"/>
                <CheckBox x:ConnectionId='9' x:Name="noTaste" Content="No taste"/>
                <CheckBox x:ConnectionId='10' x:Name="fever" Content="Fever"/>
                <CheckBox x:ConnectionId='11' x:Name="headache" Content="Headache"/>

            </StackPanel>
        </StackPanel>
        <Button x:ConnectionId='2'  HorizontalAlignment="Center" x:Name="registerPatient" Content="Register" Margin="30"                      />
    </StackPanel>
</Page>

