<Page
    x:Class="CovidApp.StaticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CovidApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas Height="400" Width="1000" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,140,0" RenderTransformOrigin="0.5,0.5" >
        <Canvas.RenderTransform>
            <CompositeTransform Rotation="-180"/>
        </Canvas.RenderTransform>
        <Canvas x:ConnectionId='2' x:Name="staticsFourth" Height="100" Width="100" Canvas.Left="150" Background="AntiqueWhite"/>
        <Canvas x:ConnectionId='3' x:Name="staticsThird" Height="100" Width="100" Canvas.Left="350" Background="AntiqueWhite"/>
        <Canvas x:ConnectionId='4' x:Name="staticSecond" Height="100" Width="100" Canvas.Left="550" Background="AntiqueWhite"/>
        <Canvas x:ConnectionId='5' x:Name="staticsFirst" Height="100" Width="100" Canvas.Left="750" Background="AntiqueWhite"/>
        <TextBlock Canvas.Left="743" Text="20 éves vagy alatti" Canvas.Top="-36" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-180.000"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Canvas.Left="542" Text="20 és 39 év közötti" Canvas.Top="-36" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-180.000"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Canvas.Left="342" Text="40 és 64 év közötti" Canvas.Top="-32" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-180.000"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Canvas.Left="137" Text="65 éves vagy iősebb" Canvas.Top="-32" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-180.000"/>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Canvas>
</Page>

